{
  "name": "@coelho-ui/use-interact-outside",
  "version": "1.0.0",
  "description": "Used in components like Dialogs and Popovers so they can close when a user clicks outside them.",
  "keywords": [
    "use-interact-outside"
  ],
  "author": "Raul Semicek Coelho <raul.s.coelho@gmail.com>",
  "main": "src/index.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RaulSCoelho/coelho-ui.git",
    "directory": "packages/hooks/use-interact-outside"
  },
  "scripts": {
    "build": "tsup src --dts",
    "dev": "yarn build:fast -- --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "build:fast": "tsup src",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "dependencies": {
    "@coelho-ui/use-effect-event": "workspace:*"
  },
  "devDependencies": {
    "clean-package": "2.2.0",
    "react": "^18.0.0"
  },
  "clean-package": "../../../clean-package.config.json",
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
